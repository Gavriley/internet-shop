	<header>
		<div class="top-bar">
			<ul>
				<li><%= link_to 'Головна', root_path %></li>
				<% if user_signed_in? %>
				<li><%= link_to 'Кабінет', edit_user_registration_path %></li>
				<li><%= link_to 'Вихід', destroy_user_session_path, method: :delete %></li>
				<% else %>
				<li><%= link_to 'Реєстрація', new_user_registration_path %></li>
				<li><%= link_to 'Вхід', new_user_session_path  %></li>
				<% end %>	
			</ul>	
			<%= form_tag products_path, method: :get, enforce_utf8: false do %>
				<%= submit_tag "Пошук", name: nil %>
				<%= text_field_tag :search, params[:search] %>
			<% end %>
		</div>
	</header>