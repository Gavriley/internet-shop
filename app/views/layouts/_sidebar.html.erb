	<div class="sidebar">
		<div class="cart-block">
			<div class="cart"> 
				<%= link_to carts_path do %>
				<%= image_tag('shopping-bag') %>
				<% end %> 
				<span id="cart"> 
					<%= @cart_count %>шт. -  <%= number_to_currency(@cart_price, unit: " грн.", separator: ".", delimiter: " ", format: "%n %u") %>
				</span>
			</div>
			<hr>
		</div>

		<div class="account">
			<p>Ви ввійшли як <span>Kasumi</span></p>
			<hr>
		</div>
		
		<% if @categories.any? %>
		<div class="category-block">
			<h1>Категорії</h1>
			<ul id="category_list">
				<% @categories.each do |category| %>
				<li><%= link_to category.name, category %><% if category.children.exists? %><span id="float_category">[+]</span><% end %></li>
				<% if category.children.exists? %>
				<ul class="nested">
					<% category.children.each do |nested_category| %>
					<li><%= link_to nested_category.name, nested_category %></li>
					<% end %>
				</ul>
				<% end %>
				<% end %>
			</ul>
		</div>
		<% end %>
	</div>